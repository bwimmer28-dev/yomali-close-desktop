{
  "name": "yomali-close-desktop",
  "version": "0.1.30",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"python -m uvicorn recon_backend.api_app:app --reload --port 8080\" \"cd web && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:frontend": "cd web && npm run dev",
    "dev:backend": "python -m uvicorn recon_backend.api_app:app --reload --port 8080",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:web": "cd web && npm install && npm run build",
    "dist": "npm run build:web && electron-builder",
    "publish": "npm run build:web && electron-builder --publish always"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0"
  },
  "build": {
    "appId": "com.stalliant.yomali.close",
    "productName": "Yomali Close",
    "icon": "build/stalliant.ico",
    "asar": true,
    "asarUnpack": [
      "recon_backend/**/*"
    ],
    "files": [
      "electron/**/*",
      "web/dist/**/*",
      "recon_backend/**/*",
      "!recon_backend/__pycache__/**/*",
      "!recon_backend/**/*.pyc"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/stalliant.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bwimmer28-dev",
        "repo": "yomali-close-desktop"
      }
    ]
  }
}